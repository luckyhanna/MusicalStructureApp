<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:id="@+id/album_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/album_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Babel"
            android:layout_margin="@dimen/margin_10"
            android:textSize="@dimen/text_title_18" />

        <TextView
            android:id="@+id/album_artist_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mumford and Sons"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_8"
            android:textSize="@dimen/text_normal_12"
            android:layout_below="@id/album_title_text" />

        <ImageView
            android:id="@+id/album_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:src="@drawable/mumford"
            android:layout_below="@id/album_artist_text"
            android:contentDescription="@string/album_img" />

    </RelativeLayout>

</android.support.v7.widget.CardView>