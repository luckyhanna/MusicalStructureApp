<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:id="@+id/artist_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/artist_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mumford and Sons"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/artist_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            tools:src="@drawable/mumford"
            android:layout_below="@id/artist_title_text"
            android:contentDescription="@string/artist_img" />

    </RelativeLayout>

</android.support.v7.widget.CardView>