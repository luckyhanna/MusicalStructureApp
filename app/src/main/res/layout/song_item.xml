<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_8">

        <TextView
            android:id="@+id/song_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_song_btn"
            android:layout_toStartOf="@id/play_song_btn"
            tools:text="Babel"
            android:textSize="@dimen/text_title_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_title_text"
            android:layout_toLeftOf="@id/play_song_btn"
            android:layout_toStartOf="@id/play_song_btn"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/song_artist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mumford and Sons"
                android:layout_marginRight="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_4"
                android:textSize="@dimen/text_normal_12"/>
            <TextView
                android:id="@+id/song_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(3:12)"
                android:textSize="@dimen/text_normal_12"/>
        </LinearLayout>

        <Button
            android:id="@+id/play_song_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/play_text"
            android:textColor="@color/tabSelected" />

    </RelativeLayout>

</android.support.v7.widget.CardView>